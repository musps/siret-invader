{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "never"],
        "comma-dangle": [2, "never"],
        "class-methods-use-this": "off",
        "comma-dangle": [2, "never"],
        "no-continue": "off",
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "no-nested-ternary": "off"
    }
}